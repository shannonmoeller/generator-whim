<!doctype html>
<html class="no-js">
<head>

	<meta charset="utf-8" />
	<meta http-equiv="x-ua-compatible" content="ie=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />

	<title>{{#if title}}{{title}} | {{/if}}{{site.title}}</title>

	<link rel="author" href="{{site.canonical}}/humans.txt" />
	<link rel="canonical" href="{{site.canonical}}{{canonical}}" />

	{{#block "styles"}}
		<link rel="stylesheet" href="/assets/css/index.css?v={{package.version}}" />
	{{/block}}

</head>
<body>
	<div class="site">
		<a class="site-skip" href="#content">Skip to Main Content</a>

		<header class="site-hd" role="banner">
			<nav class="bpLg-spread">
				<a href="/" rel="home">Home</a>
				<a href="/blog.html">Blog</a>
				<a href="https://github.com/shannonmoeller/whim" rel="external">GitHub</a>
			</nav>
		</header>

		<main class="site-bd" id="content">
			{{#block "body"}}
			{{/block}}
		</main>

		<footer class="site-ft" role="contentinfo">
			<p><small>&copy; <%= authorName %></small></p>
		</footer>
	</div>

	{{#block "scripts"}}
		<script src="/assets/js/index.js?v={{package.version}}"></script>
	{{/block}}
</body>
</html>
